{
  // app settings
  "workbench.startupEditor": "newUntitledFile",
  "workbench.activityBar.location": "hidden",
  "http.proxySupport": "off",
  "explorer.confirmDelete": false,
  "terminal.integrated.profiles.osx": {
    "zsh": { "path": "/bin/zsh", "args": ["-l", "-i"] }
  },
  // don't track
  "telemetry.telemetryLevel": "off",
  // editor setting
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.rulers": [80],
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "onlySnippets",
  "editor.wordWrap": "bounded",
  "files.insertFinalNewline": true,
  // Theme
  "window.zoomLevel": -1,
  "workbench.editor.showTabs": "none",
  "workbench.colorTheme": "Tokyo Night",
  "editor.cursorBlinking": "phase",
  "editor.fontFamily": "'Cascadia Mono SemiLight', 'Cascadia Mono', 'OperatorMono-Book', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 13,
  "workbench.colorCustomizations": {
    "editorGhostText.border": "#d71982"
  },
  // plugins
  "extensions.ignoreRecommendations": true,
  "debug.console.historySuggestions": false,
  "diffEditor.ignoreTrimWhitespace": true,
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "js/ts.implicitProjectConfig.checkJs": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsserver.pluginPaths": ["typescript-plugin-css-modules"],
  "eslint.format.enable": true,
  "playwright.showTrace": false,
  "playwright.reuseBrowser": false,
  // Only spellcheck text-ish files and commit messages
  "cSpell.enabledFileTypes": {
    "*": false,
    "markdown": true,
    "plaintext": true,
    "scminput": true
  },
  // git
  "git.openRepositoryInParentFolders": "never",
  "githubIssues.createIssueTriggers": [],
  "githubPullRequests.defaultCommentType": "review",
  "githubPullRequests.showPullRequestNumberInTree": true,
  "githubPullRequests.fileListLayout": "tree",
  "githubPullRequests.pullBranch": "never",
  "gitlens.telemetry.enabled": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "gitlens.blame.highlight.enabled": false,
  "gitlens.views.commitDetails.files.layout": "list"
}
